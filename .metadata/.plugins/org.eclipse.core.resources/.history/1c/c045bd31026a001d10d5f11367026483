		//if문으로 구간을 나누어 출력(높은 점수부터)
		int score = 73;
		if(score < 60) {
			System.out.println(score + "는 60점 미만" + " E");
        }else if(score < 70) {
			System.out.println(score + "는 60점 이상" + " C");
		}else if(score < 80) {
			System.out.println(score + "는 70점 이상" + " B");
		}else if(score < 90) {
			System.out.println(score + "는 80점 이상" + " A");
		}else if(score <= 90) {
			System.out.println(score + "는 90점 이상" + " A++");
		}		
		
	
		
		
	
		
		
		
		
		
		
		
		
	}

}
