package com.hanul.variable;

public class Ex02_number {

	public static void main(String[] args) {

		
		byte no1 = -128;
//		byte no2 = 128; byte는 127까지인데 128이여서 에러남 
		
		short no3 = 10000;
		int no4 = 1234567890;
		long no5 = 1234567890;
		long no6 = 12345678900L;//int를 넘어서는 long형을 쓰려면 숫자 끝에 대문자, 소문자L을 넣자.
		
		int no7 = 800, no8 = 900;
		int sum = no7 + no8;
		
		System.out.println(sum);
		
		float no3 = 0.1f; //실수형 데이터 타입 중 float는 숫자뒤에 f을 붙여줘야 된다
		float no4 = 0.3f;
		System.out.println(no1 + no2);
		System.out.println(no3 + no4);
		
		
		
		
		
	}
	


}
